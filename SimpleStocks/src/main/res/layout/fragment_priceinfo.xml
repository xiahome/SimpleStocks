<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/google_now_background">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:divider="?android:attr/dividerHorizontal"
            android:dividerPadding="8dp"
            android:showDividers="middle"
            android:background="@drawable/card_background">

        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:padding="8dp"
                      android:layout_gravity="center_horizontal">
            <TextView android:text="股票名称:" android:textAppearance="?android:textAppearanceSmall"
                      android:fontFamily="sans-serif-condensed" android:layout_height="wrap_content"
                      android:layout_width="match_parent" android:gravity="center"/>
            <TextView android:id="@+id/textViewStockName"
                      android:text="大秦铁路"
                      android:textAppearance="?android:textAppearanceLarge" android:layout_gravity="center_horizontal"
                      android:fontFamily="sans-serif-light" android:layout_height="wrap_content"
                      android:layout_width="wrap_content" android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="当前价:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_weight="2"/>
                <TextView
                        android:id="@+id/textViewCurrentPrice"
                        android:text="15.20"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="昨日收盘:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewPreClose"
                        android:text="14.80"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="开盘:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewOpen"
                        android:text="15.10"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="成交量:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewVolume"
                        android:text="1000000"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="成交金额:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewTransactionAmount"
                        android:text="20000000"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="买1:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewBid1"
                        android:text="15.22"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                <TextView
                        android:text="卖1:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                <TextView
                        android:id="@+id/textViewAsk1"
                        android:text="15.24"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
            <TextView
                    android:text="日最高:"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/textViewDayHigh"
                    android:text="15.40"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center_horizontal">
            <TextView
                    android:text="日最低:"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/textViewDayLow"
                    android:text="15.1"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>