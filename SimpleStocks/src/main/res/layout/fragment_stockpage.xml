<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlCompanyHeader">
            <TextView
                android:text="大秦铁路"
                android:textSize="48dp"
                android:id="@+id/textViewStockName"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textViewStockNumber"
                android:text="sh601006"
                android:textSize="24dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="$15.20"
            android:id="@+id/textViewCurrentPrice"
            android:textSize="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/rlCompanyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"/>

        <TextView
            android:text="0.71 (0.52%)"
            android:id="@+id/textViewPriceChange"
            android:layout_toRightOf="@+id/textViewCurrentPrice"
            android:layout_alignBaseline="@+id/textViewCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignBottom="@+id/textViewCurrentPrice"
            android:layout_alignParentRight="true">

            <TextView
                android:text="2016/07/01"
                android:id="@+id/textViewTradeDate"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Updated: 12:00pm"
                android:id="@+id/textViewUpdateTime"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/line_under_view"/>
    </android.support.v4.view.ViewPager>

</LinearLayout>